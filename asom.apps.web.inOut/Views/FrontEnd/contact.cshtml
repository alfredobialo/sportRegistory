@using asom.apps.web.inOut.Models.Settings
@{
  CompanyInfoModel  org  = CompanyInfoModel.Get;
  bool hasOrg = org != null;
}

<div class="contact-map-area section-padding-100-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading text-center mx-auto">
                        <h3>Get <span>in touch</span><br>with us</h3>
                        <p>You will find all neccessary details to reach us at any time!</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- ##### Google Maps ##### -->

    </div>

    <!-- ##### Contact Area Start ##### -->
    <section class="contact-area section-padding-100-0">
        <div class="container">
            <div class="row">

                <!-- Contact Information -->
                <div class="col-12 col-lg-6">
                    <div class="contact-information mb-100">

                        <!-- Contact Logo -->
                        <div class="contact-logo mb-50">
                          <h1>Contact Us</h1>
                        </div>

                      

                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex">
                            <div class="contact-icon mr-15">
                                <i class="fa fa-map"></i>
                            </div>
                            <p>@org.ChannelInfo.Address</p>
                        </div>

                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex">
                            <div class="contact-icon mr-15">
                                <i class="fa fa-phone"></i>
                            </div>
                            <p>Main: @org.ChannelInfo.PhoneNumber <br> Office: @org.ChannelInfo.PhoneNumber</p>
                        </div>

                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex">
                            <div class="contact-icon mr-15">
                                <i class="fa fa-envelope-o"></i>
                            </div>
                            <p>@org.Email</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Form Area -->
                <div class="col-12 col-lg-6">
                    <div class="contact-form-area mb-100">
                        <form action="#" method="post">
                            <input type="text" class="form-control" id="name" placeholder="Name">
                            <input type="email" class="form-control" id="email" placeholder="E-mail">
                            <textarea name="message" class="form-control" id="message" cols="30" rows="10" placeholder="Message"></textarea>
                            <button class="btn cryptos-btn btn-2 mt-30" type="submit">Contact Us</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Contact Area End ##### -->
