@using asom.apps.web.inOut.Models
<p class="pad20 font-size-18 divider">
    Application Engine Config

</p>
<p class="">Please Handle this section with care!</p>
<div class="pad10 ">
  <div class="row">
    <div class="col-sm-4">
      <div class="div pad10 text-center  border border-radius min-h200">
          <button class="btn btn-md btn-primary" ng-disabled="installingRoles" ng-click="confirmResetRoles()">Re-Install System Roles</button>
          <div ng-show="installingRoles">@Html.Partial("ui/_loading_img_partial")</div>
